# Keycloak OIDC Configuration
KEYCLOAK_ISSUER=https://your-keycloak.com/realms/your-realm
KEYCLOAK_CLIENT_ID=your-client-id
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_REDIRECT_URI=https://localhost:3000/api/auth/callback

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-min-32-characters-long
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_SAME_SITE=lax

# Redis Configuration
USE_REDIS_SESSIONS=false
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=https://localhost:5173

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Application Config
CONFIG_PATH=../config/apps.yaml
CONFIG_WATCH=true
